<%= form_with(url: filter_path, remote: :false, method: :post) do |form| %>
  <div class="field">
    <%= form.radio_button :gender, 'Female' %> Female
    <%= form.radio_button :gender, 'Male' %> Male
    <%= form.radio_button :gender, 'All' %> All
  </div>
  <div class="actions">
    <%= submit_tag "filter" %>
  </div>
  <div id="filters"><%= render 'getfilterdata' %></div>
<% end %>

