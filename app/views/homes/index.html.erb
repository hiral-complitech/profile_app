<%= form_tag(search_path, remote: :false, method: :post) do %>
  <p>
    <%= search_field_tag :search, params[:search], placeholder: "search" %>
    <%= submit_tag "search" %>
  </p>
  <div id="searches"><%= render 'getsearchdata' %></div>
<% end %>
